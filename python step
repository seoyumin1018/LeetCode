import random
num = random.randint(1, 50)

# 사용자가 맞출 때까지 입력받음 
while True:
    user_input = int(input('숫자를 입력하세요 >> '))
    if num < user_input :
        print(f'{user_input}보다 작은 수 입니다!')
    elif num > user_input :
        print(f'{user_input}보다 큰 수 입니다!')
    else:
        print('정답입니다!')
        break
